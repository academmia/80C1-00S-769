    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chrome Live Code",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:5500/dist",
            "webRoot": "${workspaceFolder}/dist/"
        },
        {
            "name": "Chrome Httpster",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:3333",
            "webRoot": "${workspaceFolder}/dist/"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "C:/COURSES/TypeScript/00/00_02Z_ts-debug/dist/index.html",
            "webRoot": "${workspaceFolder}/dist/"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/app.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}